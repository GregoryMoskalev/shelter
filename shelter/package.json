{
  "name": "shelter",
  "version": "1.0.0",
  "description": "Shelter for pets in Boston",
  "main": "index.js",
  "dependencies": {
    "node-sass": "^4.14.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  },
  "scripts": {
    "watch:sass": "node-sass pages/main/main.scss pages/main/main.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:pages/main",
    "compile:sass": "node-sass pages/main/main.scss pages/main/main.comp.css",
    "concat:css": "concat -o pages/main/main.concat.css pages/main/main.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" pages/main/main.concat.css -o pages/main/main.prefix.css",
    "compress:css": "node-sass pages/main/main.prefix.css pages/main/main.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "",
  "license": "ISC"
}
